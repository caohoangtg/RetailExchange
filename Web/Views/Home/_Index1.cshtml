
<div class="form-horizontal">
    <div class="col-md-6">
        <br />
        <div>
            <label><input id="hazard" type="checkbox" />Hazardous Meterail</label>
        </div>
        <div class="form-group">
            <div class="col-md-4"><label>Cost Center Code</label></div>
            <div class="col-md-6">
                <input type="text" class="form-control costcenter" value="" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Expiration</label>
            </div>
            <div class="col-md-6">
                <input type="date" class="form-control expiration" value="2001-01-01" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Unit Price</label>
            </div>
            <div class="col-md-6">
                <input type="number" class="form-control price" value="" required/>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <br />
        <div class="form-group">
            <div class="col-md-4"><label>Width</label></div>
            <div class="col-md-6">
                <input type="number" class="form-control width" value="" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Length</label>
            </div>
            <div class="col-md-6">
                <input type="number" class="form-control length" value="" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Height</label>
            </div>
            <div class="col-md-6">
                <input type="number" class="form-control height" value="" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Cube</label>
            </div>
            <div class="col-md-6">
                <input type="number" class="form-control cube" value="" readonly required/>
            </div>
        </div>
        <div>
            <div class="col-md-4" style="padding-left:0px;">
                <label><input id="isprepack" type="checkbox" />IsPrePack</label>
            </div>
            <div class="col-md-6" style="margin-left: 10px; padding-left:0px;">
                <input type="text" value="" class="style form-control" name="mystyle" required />
                @*@Html.DropDownList("PrePackStyte", new SelectList(ViewBag.PrePackStyte, "value", "text"), "Style", htmlAttributes: new { @class = "form-control selectpicker styte" })*@
            </div>
            
        </div>
    </div>
</div>
<br />
<div class="row">
    <a href="/Home/Edit" class="btn btn-info btn-lg " id="save">
        <span class="glyphicon glyphicon-floppy-save"></span> Save
    </a>
</div>

